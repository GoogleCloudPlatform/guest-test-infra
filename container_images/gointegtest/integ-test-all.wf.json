{
  "Name": "integ-all",
  "Sources": {
    "run_integ_tests": "run_integ_tests.sh",
    "common.sh": "common.sh"
  },
  "Vars": {
    "repo_owner": {
      "Value": "GoogleCloudPlatform",
      "Description": "GitHub repo owner or organization"
    },
    "repo_name": {
      "Description": "Github repo name",
      "Required": true
    },
    "git_ref": {
      "Value": "master",
      "Description": "Git ref to check out and build"
    },
    "gcs_path": {
      "Value": "$OUTSPATH"
    }
  },
  "Steps": {
    "disk-create": {
      "CreateDisks": [
        {
          "Name": "disk-centos-7",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-7",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-centos-stream-8",
          "SourceImage": "projects/centos-cloud/global/images/family/centos-stream-8",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-rhel-7",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-7",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-rhel-8",
          "SourceImage": "projects/rhel-cloud/global/images/family/rhel-8",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-sles-12",
          "SourceImage": "projects/suse-cloud/global/images/family/sles-12",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-sles-15",
          "SourceImage": "projects/suse-cloud/global/images/family/sles-15",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-ubuntu-1804-lts",
          "SourceImage": "projects/ubuntu-os-cloud/global/images/family/ubuntu-1804-lts",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-ubuntu-2004-lts",
          "SourceImage": "projects/ubuntu-os-cloud/global/images/family/ubuntu-2004-lts",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-debian-10",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-10",
          "SizeGb": "20",
          "Type": "pd-ssd"
        },
        {
          "Name": "disk-debian-11",
          "SourceImage": "projects/debian-cloud/global/images/family/debian-11",
          "SizeGb": "20",
          "Type": "pd-ssd"
        }
      ]
    },
    "inst-create": {
      "CreateInstances": [
        {
          "Name": "centos-7",
          "Disks": [
            {"Source": "disk-centos-7"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "centos-stream-8",
          "Disks": [
            {"Source": "disk-centos-stream-8"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "rhel-7",
          "Disks": [
            {"Source": "disk-rhel-7"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "rhel-8",
          "Disks": [
            {"Source": "disk-rhel-8"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "sles-12",
          "Disks": [
            {"Source": "disk-sles-12"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "sles-15",
          "Disks": [
            {"Source": "disk-sles-15"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "ubuntu-1804-lts",
          "Disks": [
            {"Source": "disk-ubuntu-1804-lts"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "ubuntu-2004-lts",
          "Disks": [
            {"Source": "disk-ubuntu-2004-lts"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "debian-10",
          "Disks": [
            {"Source": "disk-debian-10"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        },
        {
          "Name": "debian-11",
          "Disks": [
            {"Source": "disk-debian-11"}
          ],
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"],
          "StartupScript": "run_integ_tests",
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}"
          },
          "MachineType": "e2-standard-2"
        }
      ]
    },
    "wait-for-stop": {
      "WaitForInstancesSignal": [
        {
          "Name": "centos-7",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "centos-stream-8",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "rhel-7",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "rhel-8",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "sles-12",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "sles-15",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "ubuntu-1804-lts",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "ubuntu-2004-lts",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "debian-10",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        },
        {
          "Name": "debian-11",
          "SerialOutput": {
            "Port": 1,
            "FailureMatch": "Build failed",
            "SuccessMatch": "Build succeeded"
          }
        }
      ]
    },
    "copy-results": {
      "CopyGCSObjects": [
        {
          "Source": "${OUTSPATH}/",
          "Destination": "${gcs_path}/"
        }
      ]
    }
  },
  "Dependencies": {
    "inst-create": ["disk-create"],
    "wait-for-stop": ["inst-create"],
    "copy-results": ["wait-for-stop"]
  }
}

