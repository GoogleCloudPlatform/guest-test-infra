{
  "Name": "el7",
  "Vars": {
    "gcs_path": {
      "Required": true
    },
    "repo_owner": {
      "Required": true
    },
    "repo_name": {
      "Required": true
    },
    "git_ref": {
      "Required": true
    }
  },
  "Steps": {
    "build-package": {
      "IncludeWorkflow": {
        "Path": "./build_package_base.wf.json",
        "Vars": {
          "type": "rpm",
          "sourceImage": "projects/centos-cloud/global/images/family/centos-7",
          "gcs_path": "${gcs_path}",
          "repo_owner": "${repo_owner}",
          "repo_name": "${repo_name}",
          "git_ref": "${git_ref}"
        }
      }
    }
  }
}
