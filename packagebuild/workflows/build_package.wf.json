{
  "Name": "build-package",
  "DefaultTimeout": "30m",
  "Sources": {
    "startup.sh": "../daisy_startupscript_${type}.sh",
    "common.sh": "../common.sh"
  },
  "Vars": {
    "type": {
      "Description": "Type of workflow: rpm,deb, or goo",
      "Required": true
    },
    "sourceImage": {
      "Description": "Source image to use for instance",
      "Required": true
    },
    "gcs_path": {
      "Required": true
    },
    "repo_owner": {
      "Required": true
    },
    "repo_name": {
      "Required": true
    },
    "git_ref": {
      "Required": true
    },
    "extra_repo": {
      "Required": false
    },
    "extra_repo_owner": {
      "Required": false
    },
    "extra_git_ref": {
      "Required": false
    },
    "version": {
      "Required": true
    },
    "build_dir": {
      "Required": true
    },
    "sbom_util_gcs_root": {
      "Required": false
    },
    "target_version": {
      "Required": false
    },
    "machine_type": {
      "Value": "e2-standard-2",
      "Description": "machine type"
    },
    "zone": {
      "Value": "us-central1-a",
      "Description": "zone"
    },
    "disk_type": {
      "Value": "pd-ssd",
      "Description": "disk type"
    },
    "lkg_gcs_path": {
      "Required": false,
      "Description": "GCS path for LKG binaries"
    },
    "spec_name": {
      "Required": false,
      "Description": "The specific goospec being built"
    }
  },
  "Steps": {
    "build-packages": {
      "CreateInstances": [
        {
          "disks": [
            {
              "initializeParams": {
                "diskType": "${disk_type}",
                "sourceImage": "${sourceImage}"
              }
            }
          ],
          "Metadata": {
            "repo-owner": "${repo_owner}",
            "repo-name": "${repo_name}",
            "git-ref": "${git_ref}",
            "extra-repo": "${extra_repo}",
	    "extra-repo-owner": "${extra_repo_owner}",
            "extra-git-ref": "${extra_git_ref}",
            "build-dir": "${build_dir}",
            "version": "${version}",
            "sbom-util-gcs-root": "${sbom_util_gcs_root}",
            "target-version": "${target_version}",
	    "lkg_gcs_path": "${lkg_gcs_path}",
	    "spec_name": "${spec_name}"
          },
          "machineType": "${machine_type}",
          "zone": "${zone}",
          "name": "inst-build-pkg",
          "StartupScript": "startup.sh",
          "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"]
        }
      ]
    },
    "wait-for-build": {
      "Timeout": "30m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-build-pkg",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Build succeeded",
            "FailureMatch": "Build failed"
          }
        }
      ]
    },
    "copy-packages": {
      "CopyGCSObjects": [
        {
          "Source": "${OUTSPATH}/",
          "Destination": "${gcs_path}/"
        }
      ]
    }
  },
  "Dependencies": {
    "wait-for-build": [
      "build-packages"
    ],
    "copy-packages": [
      "wait-for-build"
    ]
  }
}
